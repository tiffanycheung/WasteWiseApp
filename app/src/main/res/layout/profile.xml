<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView


        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="39dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView">

        <androidx.constraintlayout.widget.ConstraintLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="340dp"
                android:layout_height="25dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#2D8B00"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/blueFrame"
                android:layout_width="340dp"
                android:layout_height="229dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/blue_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileTitle" />

            <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@+id/blueFrame"
        app:layout_constraintStart_toStartOf="@+id/blueFrame"
        app:layout_constraintTop_toTopOf="@+id/blueFrame"
        app:srcCompat="@drawable/profile_pic" />


    <TextView
        android:id="@+id/profileNameTxt"
        android:layout_width="340dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Emily Smith"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#262626"
        android:fontFamily="@font/inter_semibold"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textSize="14dp"
        app:cornerRadius="10dip"
        app:layout_constraintEnd_toEndOf="@+id/blueFrame"
        app:layout_constraintStart_toStartOf="@+id/blueFrame"
        app:layout_constraintTop_toBottomOf="@+id/profileNameTxt" />


            <ImageView
                android:id="@+id/transactionBox"
                android:layout_width="341dp"
                android:layout_height="86dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blueFrame" />

            <ImageView
                android:id="@+id/pointIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                app:layout_constraintBottom_toBottomOf="@+id/transactionBox"
                app:layout_constraintStart_toStartOf="@+id/transactionBox"
                app:layout_constraintTop_toTopOf="@+id/transactionBox"
                app:srcCompat="@drawable/points" />

            <TextView
                android:id="@+id/profilePointTxt"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter_semibold"
                android:text="300 points"
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/pointIcon"
                app:layout_constraintStart_toEndOf="@+id/pointIcon"
                app:layout_constraintTop_toTopOf="@+id/pointIcon" />

            <ImageView
                android:id="@+id/exchangeItemsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="52dp"
                app:layout_constraintBottom_toBottomOf="@+id/transactionBox"
                app:layout_constraintStart_toEndOf="@+id/profilePointTxt"
                app:layout_constraintTop_toTopOf="@+id/transactionBox"
                app:srcCompat="@drawable/exchange" />

            <TextView
                android:id="@+id/exchangePointTxt"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter_semibold"
                android:text="10 Exchange Items"
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/exchangeItemsIcon"
                app:layout_constraintStart_toEndOf="@+id/exchangeItemsIcon"
                app:layout_constraintTop_toTopOf="@+id/exchangeItemsIcon" />

            <ImageView
                android:id="@+id/logoutTab"
                android:layout_width="340dp"
                android:layout_height="64dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/logout_tab"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/digitalCardTab"
                app:layout_constraintStart_toStartOf="@+id/digitalCardTab"
                app:layout_constraintTop_toBottomOf="@+id/digitalCardTab" />

            <ImageView
                android:id="@+id/digitalCardTab"
                android:layout_width="340dp"
                android:layout_height="64dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/digitalcard_tab"
                app:layout_constraintEnd_toEndOf="@+id/settingsTab"
                app:layout_constraintStart_toStartOf="@+id/settingsTab"
                app:layout_constraintTop_toBottomOf="@+id/settingsTab" />

            <ImageView
                android:id="@+id/settingsTab"
                android:layout_width="340dp"
                android:layout_height="64dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/settings_tab"
                app:layout_constraintEnd_toEndOf="@+id/transactionBox"
                app:layout_constraintStart_toStartOf="@+id/transactionBox"
                app:layout_constraintTop_toBottomOf="@+id/transactionBox" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="407dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="40dp"
        app:itemIconTint="@drawable/bottom_navigation_item_color"
        app:itemTextColor="@drawable/bottom_navigation_item_color"/>




</androidx.constraintlayout.widget.ConstraintLayout>
