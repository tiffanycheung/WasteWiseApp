<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFF5D7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


       <!-- <ImageView
            android:layout_width="334dp"
            android:layout_height="163dp"
            android:background="@drawable/yellow_box" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity = "center_vertical" >

            <ImageView
                android:id ="@+id/uPictureIV"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >

                <TextView
                    android:id = "@+id/pTitleTv"
                    android:text = "Title"
                    android:textSize = "16sp"
                    android:layout_width = "232dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#000000"
                    />


            </LinearLayout>

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_more_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/pNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="8sp"
            android:fontFamily="@font/inter"
            android:textStyle="italic"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/timestampTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/12/12"
            android:textSize="8sp"
            android:fontFamily="@font/inter"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/pDescriptionTv"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/inter"
            android:text="The description of the post"
            android:textColor="@color/black"
            android:textSize="12sp" />

       <!-- <ImageView
            android:id = "@+id/pImageIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white" />-->

        <View
            android:layout_width = "match_parent"
            android:layout_height="1dp"
            android:background = "#F5F0F0" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start" >

            <ImageView
            android:id="@+id/addPostBkBtn"
            android:layout_width="16dp"
            android:layout_height="16dp"
             android:src="@drawable/thumb_react_icon"
            android:layout_marginEnd="5dp"/>

            <TextView
                android:id = "@+id/likeTxt"
                android:layout_width="39dp"
                android:layout_height="16dp"
                android:text = "100"
                android:textSize="12sp"
                android:fontFamily="@font/inter"
                android:textColor = "@color/black"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/commentBtn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/comment_icon"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id = "@+id/commentTxt"
                android:layout_width="39dp"
                android:layout_height="16dp"
                android:text = "20"
                android:textSize="12sp"
                android:fontFamily="@font/inter"
                android:textColor = "@color/black"
                android:layout_marginEnd="40dp"/>

            <ImageView
                android:id="@+id/shareBtn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/share_icon"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id = "@+id/shareTxt"
                android:layout_width="39dp"
                android:layout_height="16dp"
                android:text = "Share"
                android:textSize="12sp"
                android:fontFamily="@font/inter"
                android:textColor = "@color/black"
                android:layout_marginEnd="40dp"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>